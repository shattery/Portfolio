---
import Nav from "../components/nav.astro";
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import OverlayTransition from "../components/OverlayTransition.jsx";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>
  <body class="min-h-screen bg-background text-textColor flex flex-col">
    {/* Globale Navigation & Seiten-Transition */}
    <Nav />
    <OverlayTransition client:load />
    <div
      id="app-content"
      class="transition-opacity duration-300 ease-out opacity-100"
    >
      {/* Seiteninhalt */}
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  /* WÃ¤hrend der Overlay-Transition den Seiteninhalt ausblenden */
  html.overlay-active #app-content {
    opacity: 0;
    pointer-events: none;
  }
</style>
