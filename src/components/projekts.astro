---
interface Project {
  title: string;
  description: string;
  languages: string[];
  imageUrl: string;
  detailsUrl: string;
}

const { projects } = Astro.props as { projects: Project[] };
---

<section class="max-w-[1200px] mx-auto py-12 px-4">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    {
      projects.map((project: Project) => (
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-md overflow-hidden flex flex-col border border-gray-200 dark:border-gray-700 transition-transform transition-shadow duration-200 hover:-translate-y-2 hover:scale-105 hover:shadow-xl hover:border-indigo-500 dark:hover:border-indigo-400">
          <img
            src={project.imageUrl}
            alt={project.title}
            class="w-full h-44 sm:h-40 object-cover bg-gray-100 dark:bg-gray-900"
            loading="lazy"
            decoding="async"
            width="800"
            height="256"
            sizes="(min-width: 1024px) 33vw, (min-width: 640px) 50vw, 100vw"
          />
          <div class="p-6 flex-1 flex flex-col">
            <h3 class="text-xl font-semibold mb-2 text-[color:var(--color-heading)]">
              {project.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300 mb-4 flex-1">
              {project.description}
            </p>
            <div class="mb-4">
              {project.languages.map((lang: string) => (
                <span class="inline-block bg-indigo-200 dark:bg-indigo-400/20 text-gray-900 dark:text-indigo-200 px-3 py-1 rounded-lg text-sm mr-2 mb-2 font-medium tracking-wide">
                  {lang}
                </span>
              ))}
            </div>
            <a
              href={project.detailsUrl}
              class="block w-full text-center bg-indigo-500 hover:bg-indigo-400 dark:bg-indigo-600 dark:hover:bg-indigo-500 text-white px-2 py-2 rounded-lg font-semibold shadow-sm transition-colors duration-200 mt-2"
            >
              Mehr Details
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>
