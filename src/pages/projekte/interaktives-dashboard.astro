---
import Layout from "../../layouts/Layout.astro";
import ProjectDetails from "../../components/ProjectDetails.astro";
---

<Layout>
  <main class="bg-background text-textColor min-h-screen">
    <section class="pt-24 pb-16">
      <ProjectDetails
        title="Interaktives Dashboard"
        subtitle="Datenvisualisierung mit interaktiven Diagrammen"
        imageUrl="/images/projekt2.jpg"
        date="2025-09-15"
        description="Ein Dashboard zur Visualisierung von Daten. Fokus auf interaktive Charts, Filter und Performance."
        features={[
          "Filterbare Charts",
          "Drilldown-Interaktionen",
          "Server-API-Anbindung",
        ]}
        technologies={["React", "D3.js", "Node.js", "Express"]}
        repoUrl="https://github.com/dein-name/dein-repo"
        demoUrl="#"
      />
    </section>
  </main>
</Layout>

