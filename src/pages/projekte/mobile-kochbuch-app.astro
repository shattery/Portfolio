---
import Layout from "../../layouts/Layout.astro";
import ProjectDetails from "../../components/ProjectDetails.astro";
---

<Layout>
  <main class="bg-background text-textColor min-h-screen">
    <section class="pt-24 pb-16">
      <ProjectDetails
        title="Mobile Kochbuch-App"
        subtitle="Rezepte für iOS und Android"
        imageUrl="/images/projekt3.jpg"
        date="2025-09-15"
        description="Eine simple Kochbuch-App mit Favoriten, Suche und Offline-Funktionalität."
        features={[
          "Favoriten & Tags",
          "Offline-Speicherung",
          "Synchronisation via Firebase",
        ]}
        technologies={["React Native", "Firebase", "Redux"]}
        repoUrl="https://github.com/dein-name/dein-repo"
        demoUrl="#"
      />
    </section>
  </main>
</Layout>

