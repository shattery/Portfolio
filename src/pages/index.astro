        <About />
      </Reveal>
    </div>

    <section id="projects" class="py-16 scroll-mt-28">
      <div class="container mx-auto px-4">
        <Reveal variant="fade-up" client:load>
          <h2 class="text-4xl font-bold text-center mb-12">Meine Projekte</h2>
